{
  "extends": "../../packages/typescript-config/base.json",
  "compilerOptions": {
    "paths": {
      "@makemymoment/typescript-config/*": ["../../packages/typescript-config/*"],
      "@makemymoment/types": ["../../packages/types"],
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": "src",
    "module": "esnext",
    "moduleResolution": "Node"
  },
  "include": [
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.ts",
    ".next/types/**/*.ts",
    "index.d.ts",
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    { "path": "../types/"} 
  ]
}
